<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dedede">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/monday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:paddingBottom="5dp"
            android:background="@drawable/day1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/mon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:gravity="center"
                android:textSize="24sp"
                android:background="@drawable/day1"
                android:textColor="#422E2E"
                android:textStyle = ""
                android:text="Понедельник" />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/tuesday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:paddingBottom="5dp"
            android:background="@drawable/day2"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:gravity="center"
                android:textSize="24sp"
                android:background="@drawable/day2"
                android:textColor="#422E2E"
                android:textStyle = ""
                android:text="Вторник" />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/wednesday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:paddingBottom="5dp"
            android:background="@drawable/day3"
            android:orientation="vertical">
            <TextView
                android:id="@+id/wed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:gravity="center"
                android:textSize="24sp"
                android:background="@drawable/day3"
                android:textColor="#422E2E"
                android:textStyle = ""
                android:text="Среда" />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/thursday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:paddingBottom="5dp"
            android:background="@drawable/day4"
            android:orientation="vertical">
            <TextView
                android:id="@+id/thur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:gravity="center"
                android:textSize="24sp"
                android:background="@drawable/day4"
                android:textColor="#422E2E"
                android:textStyle = ""
                android:text="Четверг" />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/friday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:paddingBottom="5dp"
            android:background="@drawable/day5"
            android:orientation="vertical">
            <TextView
                android:id="@+id/frid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:gravity="center"
                android:textSize="24sp"
                android:background="@drawable/day5"
                android:textColor="#422E2E"
                android:textStyle = ""
                android:text="Пятница" />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/saturday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:paddingBottom="5dp"
            android:background="@drawable/day6"
            android:orientation="vertical">
            <TextView
                android:id="@+id/sat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:gravity="center"
                android:textSize="24sp"
                android:background="@drawable/day6"
                android:textColor="#422E2E"
                android:textStyle = ""
                android:text="Суббота" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>